#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <conio.h>

short menu(char *arr[])
{
	int k, i = 1;
	char ch;

	printf("\n%s\n", arr[0]);
	while (arr[i])
	{
		printf("\n<%d> - %s", i, arr[i]);
		i++;
	}

	printf("\n\nВашият избор: ");
	do
	{
		ch = _getch();
		k = ch - '0'; //превръща char в int
	} while (k <= 0 || k > i);

	printf("%c\n", ch);

	return ch - '0'; // връща цифра
}
