char *fileMenu[] =
{
	"Изберете вида на файла:",

	"Текстови файл (.txt)",
	"Двоичен файл (.dat)"
};

int main() 
{
	Node *head = NULL;
	char find[7];

	for (size_t i = 0; i < 3; i++)
	{
		head = AddElement(head);
	}

	PrintAllElements(head);

	printf("\nEnter ID: ");
	scanf("%s", &find);

	PrintElement(head, find); 

	printf("\n");
	head = DeleteElement(head, find);
	PrintAllElements(head);

	system("pause");
	return 0;
}
